<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.title %>
  </td>
  <td>
    <%= post.content %>
  </td>
  <td>
    <%= post.user.decorate.full_name %>
  </td>
  <td>
    <%= l post.created_at, format: :long %>
  </td>
  <td>
    <%= link_to 'Show', admin_post_path(post), class: 'btn btn-info' %>
    <%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-success' %>
    <%= link_to 'Delete', admin_post_path(post), method: :delete, data: { confirm: 'じょん？' }, class: 'btn btn-danger' %>
  </td>
</tr>
